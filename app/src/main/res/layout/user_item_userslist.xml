<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
>

    <TextView
            android:text="@string/userName"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/username_usersList"
            app:layout_constraintTop_toTopOf="@+id/userImage_userList"
            app:layout_constraintBottom_toBottomOf="@+id/userImage_userList"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/userImage_userList" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/circle_imagebutton_register"
            app:civ_border_width="2dp"
            android:id="@+id/userImage_userList"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@mipmap/ic_launcher_round"
    />
</android.support.constraint.ConstraintLayout>